{
  "displayName": "Live Cloud Database Tests Default",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testTimeout": 60000,
  "setupFilesAfterEnv": [
    "<rootDir>/backend/src/test/crypto-polyfill.ts",
    "<rootDir>/backend/src/test/cloud-test-setup.ts"
  ],
  "testMatch": ["<rootDir>/backend/src/tests/**/*.test.{js,ts}"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "useESM": false,
      "tsconfig": "backend/tsconfig.test.json"
    }]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/backend/src/$1"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(@google-cloud|axios)/)"
  ],
  "globals": {
    "ts-jest": {
      "useESM": false
    }
  },
  "testEnvironmentOptions": {
    "url": "http://localhost"
  },
  "maxWorkers": 1,
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true,
  "testPathIgnorePatterns": ["node_modules", "dist"]
}
