{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["**/tests/**/*.test.{js,ts}", "**/__tests__/**/*.{js,ts}"],
  "collectCoverageFrom": [
    "backend/src/**/*.{js,ts}",
    "backend/routes/**/*.{js,ts}",
    "!backend/src/**/*.d.ts",
    "!backend/src/test/**"
  ],
  "setupFilesAfterEnv": ["<rootDir>/backend/src/test/setup.ts"],
  "testTimeout": 10000,
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/backend/src/$1"
  }
}
