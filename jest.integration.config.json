{
  "displayName": "Live Cloud Integration Tests",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testTimeout": 60000,
  "setupFilesAfterEnv": [
    "<rootDir>/backend/src/test/crypto-polyfill.ts",
    "<rootDir>/backend/src/test/integration-setup.ts"
  ],
  "testMatch": ["<rootDir>/backend/src/tests/**/*integration*.test.{js,ts}"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "useESM": false,
      "tsconfig": "backend/tsconfig.test.json"
    }]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/backend/src/$1"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(@google-cloud|axios)/)"
  ],
  "maxWorkers": 1,
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true,
  "testPathIgnorePatterns": [
    "node_modules",
    "dist"
  ]
}
